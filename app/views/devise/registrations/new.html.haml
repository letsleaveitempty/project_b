- content_for :navbar do
  = render 'partials/navbar', user_signed_in: user_signed_in?, modifier: ''

.row
  .small-6.small-centered.columns
    %h2= 'Sign up'

    = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
      = devise_error_messages!

      .row
        .large-12.columns
          = f.label :email
          = f.email_field :email

      .row
        .large-12.columns
          = f.label :instagram_username
          = f.text_field :instagram_username

      .row
        .large-12.columns
          = f.label :password
          = f.password_field :password, autocomplete: "off"
          - if @minimum_password_length
            %small= "(#{@minimum_password_length} characters minimum)"

      .row
        .large-12.columns
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off"

      .row
        .large-12.columns
          %button.expand= "Sign up"

    = render "devise/shared/links"
