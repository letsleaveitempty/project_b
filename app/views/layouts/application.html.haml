!!! 5
%html{ lang: 'en' }
  %head
    %meta{ charset: 'UTF-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0, user-scalable=no' }
    %title= 'Wunschconcert'

    = stylesheet_link_tag :wunschconcert, media: 'all'
    = csrf_meta_tag

  %body
    - if notice
      %p.alert.alert-success= notice
    - if alert
      %p.alert.alert-danger= alert
    = render partial: 'partials/navbar', locals: { user_signed_in: user_signed_in? }
    = yield
